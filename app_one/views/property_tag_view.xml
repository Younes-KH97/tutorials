<odoo>
    <record id="property_tag_view_tree" model="ir.ui.view">
        <field name="name">property tag tree</field>
        <field name="model">property.tag</field>
        <field name="arch" type="xml">
            <tree string="Property tags" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="property_tag_view_form" model="ir.ui.view">
        <field name="name">property tag form</field>
        <field name="model">property.tag</field>
        <field name="arch" type="xml">
            <form string="Property tags">
                <field name="name"/>
            </form>
        </field>
    </record>

    <record id="property_tag_action" model="ir.actions.act_window">
        <field name="name">property tags</field>
        <field name="res_model">property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="property_tag_menu_action"
              name="property tag"
              action="property_tag_action"
              parent="property_type_first_level_menu"/>
</odoo>